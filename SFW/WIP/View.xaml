<Window x:Class="SFW.WIP.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SFW.WIP"
        mc:Ignorable="d"
        Title="WIP.RECEIPTS" Height="450" Width="800" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        
        <!--#region Wip Receipt Header-->

        <TextBlock Grid.Row="0"
                   Text="{Binding WONbr, StringFormat='Work Order: {0}'}"
                   FontSize="24"
                   FontWeight="Bold"/>
        
        <!--#endregion-->
        
        <!--#region User Information-->
        
        
        
        <!--#endregion-->


    </Grid>
</Window>
