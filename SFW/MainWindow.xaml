<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SFW"
    x:Class="SFW.MainWindow"
        mc:Ignorable="d"
        Title="Shop Floor Workbench" MinWidth="900" MinHeight="480" WindowState="Maximized" WindowStartupLocation="CenterOwner">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!--#region Main Menu Usercontrol for all command-->

        <Menu x:Name="MainMenu"
              Grid.Row="0"
              FontSize="16"
              FontWeight="Bold"
              VerticalAlignment="Stretch">
            <MenuItem Header="View">
                <MenuItem Header="Work Order">
                    <ListView ItemsSource="{Binding WorkCenterList.WorkOrderList}"
                              DisplayMemberPath="OrderNumber"/>
                </MenuItem>
                <MenuItem Header="Schedule">
                    
                </MenuItem>
                <CheckBox Content="Work Center"/>
            </MenuItem>
            <MenuItem Header="Queries">
                <MenuItem Header="ITEMS.LOT"
                          Command=""
                          CommandParameter=""/>
                <MenuItem Header="ITH"
                          Command=""
                          CommandParameter=""/>
            </MenuItem>
            <MenuItem Header="Help">
                
            </MenuItem>
        </Menu>
        
        <!--#endregion-->
        
        <!--#region WorkSpace Grid-->

        <Grid x:Name="WorkSpaceGrid"
              Grid.Row="1"/>

        <!--#endregion-->
        
    </Grid>
</Window>
